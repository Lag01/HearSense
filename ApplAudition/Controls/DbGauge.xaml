<UserControl x:Class="ApplAudition.Controls.DbGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label supérieur -->
        <TextBlock Grid.Row="0"
                   Text="{Binding ModeLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="14"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Jauge principale -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Barre de progression stylisée -->
            <Border Grid.Column="0"
                    Background="#F0F0F0"
                    CornerRadius="10"
                    Height="60"
                    Margin="0,0,20,0">
                <Grid>
                    <!-- Barre colorée animée -->
                    <Border x:Name="GaugeBar"
                            Background="{Binding CategoryBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CornerRadius="10"
                            HorizontalAlignment="Left"
                            Width="{Binding GaugeWidth, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="GaugeTransform"/>
                        </Border.RenderTransform>
                    </Border>

                    <!-- Marqueurs de seuils (75, 95 et 110 dB(A)) -->
                    <Canvas>
                        <!-- Marqueur 75 dB(A) -->
                        <Line X1="219" Y1="0" X2="219" Y2="60"
                              Stroke="Gray"
                              StrokeThickness="1"
                              StrokeDashArray="2,2"
                              Opacity="0.5"/>
                        <!-- Marqueur 95 dB(A) -->
                        <Line X1="277" Y1="0" X2="277" Y2="60"
                              Stroke="Gray"
                              StrokeThickness="1"
                              StrokeDashArray="2,2"
                              Opacity="0.5"/>
                        <!-- Marqueur 110 dB(A) -->
                        <Line X1="321" Y1="0" X2="321" Y2="60"
                              Stroke="Gray"
                              StrokeThickness="1"
                              StrokeDashArray="2,2"
                              Opacity="0.5"/>
                    </Canvas>
                </Grid>
            </Border>

            <!-- Valeur numérique -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding ValueText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="{Binding CategoryBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <TextBlock Text="dB(A)"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Catégorie d'exposition -->
        <Border Grid.Row="2"
                Margin="0,15,0,0"
                Padding="12,8"
                Background="{Binding CategoryBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CornerRadius="6"
                Opacity="0.9">
            <TextBlock Text="{Binding CategoryText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
