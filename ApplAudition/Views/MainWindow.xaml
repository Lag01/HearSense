<Window x:Class="ApplAudition.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ApplAudition.Controls"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Appli Audition - Niveau sonore"
        Height="550"
        Width="700"
        MinHeight="400"
        MinWidth="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte simplifiÃ© -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Niveau sonore"
                       FontSize="28"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Panneau d'avertissement pour les enceintes (visible uniquement si dÃ©tectÃ©) -->
        <Border Grid.Row="1"
                BorderBrush="Orange"
                BorderThickness="2"
                CornerRadius="12"
                Padding="30"
                Margin="0,0,0,20"
                Background="#FFF3E0"
                Visibility="{Binding IsSpeakerDetected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="âš ï¸"
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <TextBlock Text="Application non compatible"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="OrangeRed"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                <TextBlock Text="{Binding SpeakerWarningMessage}"
                           FontSize="14"
                           Foreground="#E65100"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="400"/>
            </StackPanel>
        </Border>

        <!-- Jauge dB(A) avec code couleur (masquÃ©e si enceinte dÃ©tectÃ©e) -->
        <Border Grid.Row="1"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="12"
                Padding="25"
                Margin="0,0,0,20"
                Background="White"
                Visibility="{Binding IsSpeakerDetected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
            <StackPanel>
                <!-- UserControl DbGauge -->
                <controls:DbGauge Value="{Binding CurrentDbA}"
                                  Category="{Binding ExposureCategory}"
                                  ModeLabel="dB(A)"
                                  Height="180"/>

                <!-- Avertissement discret -->
                <TextBlock Text="Estimation du niveau sonore - Valeur indicative"
                           FontSize="11"
                           FontStyle="Italic"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Graphe historique LiveCharts2 (masquÃ© si enceinte dÃ©tectÃ©e) -->
        <Border Grid.Row="2"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="12"
                Padding="20"
                Background="White"
                Visibility="{Binding IsSpeakerDetected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Titre du graphe -->
                <TextBlock Grid.Row="0"
                           Text="Historique (3 minutes)"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <!-- Graphe LiveCharts2 -->
                <lvc:CartesianChart Grid.Row="1"
                                    Series="{Binding Series}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    LegendPosition="Hidden"
                                    TooltipPosition="Top"/>
            </Grid>
        </Border>

        <!-- ContrÃ´les (Export CSV discret) -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="ðŸ“Š Exporter CSV"
                    Command="{Binding ExportCsvCommand}"
                    Padding="12,6"
                    FontSize="12"
                    Background="Transparent"
                    BorderThickness="1"
                    BorderBrush="LightGray"
                    Cursor="Hand"
                    ToolTip="Exporter l'historique vers un fichier CSV"/>

            <TextBlock Text="{Binding StatusMessage}"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"
                       FontStyle="Italic"
                       FontSize="11"
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
