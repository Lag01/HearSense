<Window x:Class="HearSense.Views.TrayPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:HearSense.Controls"
        mc:Ignorable="d"
        Title=""
        Icon="/Resources/icon.ico"
        Height="280"
        Width="280"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Deactivated="OnWindowDeactivated">

    <Border Background="White"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="12"
            Padding="15">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titre -->
            <TextBlock Grid.Row="0"
                       Text="Appli Audition"
                       FontSize="14"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Jauge miniature -->
            <controls:DbGauge Grid.Row="1"
                              Value="{Binding CurrentDbA}"
                              Category="{Binding ExposureCategory}"
                              ModeLabel="dB(A)"
                              IsCompact="True"
                              Height="160"
                              Margin="0,5"/>

            <!-- Boutons d'action -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <!-- Bouton Ouvrir -->
                <Button Click="OnOpenMainWindow"
                        Style="{StaticResource ModernButtonSecondary}"
                        Padding="10,6"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <!-- Icône SVG Ouvrir/Home -->
                        <Path Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z"
                              Fill="{StaticResource PrimaryTextBrush}"
                              Width="14"
                              Height="14"
                              Stretch="Uniform"
                              Margin="0,0,6,0"/>
                        <TextBlock Text="Ouvrir"
                                   VerticalAlignment="Center"
                                   FontSize="12"/>
                    </StackPanel>
                </Button>

                <!-- Bouton Paramètres -->
                <Button Click="OnOpenSettings"
                        Style="{StaticResource ModernButtonSecondary}"
                        Padding="10,6">
                    <StackPanel Orientation="Horizontal">
                        <!-- Icône SVG Paramètres -->
                        <Path Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.21,15.05 2.27,14.78 2.46,14.63L4.57,12.97L4.5,12L4.57,11L2.46,9.37C2.27,9.22 2.21,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.79,8.95 21.73,9.22 21.54,9.37L19.43,11L19.5,12L19.43,13L21.54,14.63C21.73,14.78 21.79,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10Z"
                              Fill="{StaticResource PrimaryTextBrush}"
                              Width="14"
                              Height="14"
                              Stretch="Uniform"
                              Margin="0,0,6,0"/>
                        <TextBlock Text="Paramètres"
                                   VerticalAlignment="Center"
                                   FontSize="12"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
