<Window x:Class="HearSense.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Paramètres - Appli Audition"
        Icon="/Resources/icon.ico"
        Height="800"
        Width="550"
        MinHeight="700"
        MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="25" Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <TextBlock Grid.Row="0"
                   Text="Paramètres"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryTextBrush}"
                   Margin="0,0,0,24"/>

        <!-- ScrollViewer pour le contenu -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Section 1 : Limite critique -->
                <Expander Header="Limite critique" IsExpanded="True" Margin="0,0,0,16" Style="{StaticResource ModernExpander}">
                    <StackPanel Margin="0,16,0,0">
                        <!-- Seuil critique avec Slider + TextBox -->
                        <TextBlock Text="Seuil critique (dB(A))"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Slider Grid.Column="0"
                                    Style="{StaticResource ModernSlider}"
                                    Minimum="40"
                                    Maximum="120"
                                    TickFrequency="5"
                                    IsSnapToTickEnabled="True"
                                    Value="{Binding CriticalThresholdDbA, Mode=TwoWay}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,15,0"/>

                            <TextBox Grid.Column="1"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding CriticalThresholdDbA, Mode=TwoWay, StringFormat=F0}"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Width="70"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Height="36"/>
                        </Grid>

                        <!-- Recommandations OMS/française -->
                        <Border Background="{StaticResource InfoBackgroundBrush}"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,16,0,0">
                            <StackPanel>
                                <TextBlock Text="📋 Recommandations OMS/française"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryDarkBrush}"
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Exposition maximale recommandée :"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,0,0,8"/>

                                <TextBlock FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="8,0,0,0"
                                           LineHeight="20">
                                    <Run Text="• 85 dB(A) → 8 heures maximum"/><LineBreak/>
                                    <Run Text="• 88 dB(A) → 4 heures maximum"/><LineBreak/>
                                    <Run Text="• 91 dB(A) → 2 heures maximum"/><LineBreak/>
                                    <Run Text="• 94 dB(A) → 1 heure maximum"/><LineBreak/>
                                    <Run Text="• 97 dB(A) → 30 minutes maximum"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Expander>

                <!-- Section 2 : Notifications -->
                <Expander Header="Notifications" IsExpanded="True" Margin="0,0,0,16" Style="{StaticResource ModernExpander}">
                    <StackPanel Margin="0,16,0,0">
                        <!-- Activer notifications -->
                        <CheckBox Content="Activer les notifications de dépassement"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding EnableNotifications, Mode=TwoWay}"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,20"/>

                        <!-- Cooldown -->
                        <TextBlock Text="Intervalle minimal entre notifications (minutes)"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Slider Grid.Column="0"
                                    Style="{StaticResource ModernSlider}"
                                    Minimum="1"
                                    Maximum="30"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Value="{Binding NotificationCooldownMinutes, Mode=TwoWay}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,15,0"
                                    IsEnabled="{Binding EnableNotifications}"/>

                            <TextBox Grid.Column="1"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding NotificationCooldownMinutes, Mode=TwoWay}"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Width="70"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Height="36"
                                     IsEnabled="{Binding EnableNotifications}"/>
                        </Grid>

                        <!-- Notification unique -->
                        <CheckBox Content="Une seule notification par session"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding NotificationShowOncePerSession, Mode=TwoWay}"
                                  Margin="0,20,0,20"
                                  IsEnabled="{Binding EnableNotifications}"/>

                        <!-- Bouton test -->
                        <Button Command="{Binding TestNotificationCommand}"
                                Style="{StaticResource ModernButtonSecondary}"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding EnableNotifications}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M21,19V20H3V19L5,17V11C5,7.9 7.03,5.17 10,4.29C10,4.19 10,4.1 10,4A2,2 0 0,1 12,2A2,2 0 0,1 14,4C14,4.1 14,4.19 14,4.29C16.97,5.17 19,7.9 19,11V17L21,19M14,21A2,2 0 0,1 12,23A2,2 0 0,1 10,21"
                                      Fill="{StaticResource PrimaryTextBrush}"
                                      Width="16"
                                      Height="16"
                                      Stretch="Uniform"
                                      Margin="0,0,8,0"/>
                                <TextBlock Text="Tester la notification" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Expander>

                <!-- Section 3 : Protection automatique du volume -->
                <Expander Header="Protection automatique du volume" IsExpanded="True" Margin="0,0,0,16" Style="{StaticResource ModernExpander}">
                    <StackPanel Margin="0,16,0,0">
                        <!-- Activer la protection -->
                        <CheckBox Content="Réduire automatiquement le volume si le seuil est dépassé"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding IsAutoVolumeProtectionEnabled, Mode=TwoWay}"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,20"/>

                        <!-- Seuil de protection avec Slider + TextBox -->
                        <TextBlock Text="Seuil de déclenchement (dB(A))"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   Margin="0,0,0,12"
                                   IsEnabled="{Binding IsAutoVolumeProtectionEnabled}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Slider Grid.Column="0"
                                    Style="{StaticResource ModernSlider}"
                                    Minimum="70"
                                    Maximum="95"
                                    TickFrequency="5"
                                    IsSnapToTickEnabled="True"
                                    Value="{Binding VolumeProtectionThresholdDbA, Mode=TwoWay}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,15,0"
                                    IsEnabled="{Binding IsAutoVolumeProtectionEnabled}"/>

                            <TextBox Grid.Column="1"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding VolumeProtectionThresholdDbA, Mode=TwoWay, StringFormat=F0}"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Width="70"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Height="36"
                                     IsEnabled="{Binding IsAutoVolumeProtectionEnabled}"/>
                        </Grid>

                        <!-- Explication -->
                        <Border Background="{StaticResource WarningBackgroundBrush}"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,16,0,0">
                            <StackPanel>
                                <TextBlock Text="ℹ️ Comment ça fonctionne ?"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource WarningBrush}"
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <TextBlock FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           TextWrapping="Wrap"
                                           LineHeight="20">
                                    <Run Text="Lorsque le niveau sonore détecté dépasse le seuil configuré, l'application réduit automatiquement le volume système Windows pour ramener le niveau sonore à un niveau sûr."/><LineBreak/><LineBreak/>
                                    <Run Text="⚠️ Cette protection s'applique toutes les 5 secondes maximum pour éviter les ajustements trop fréquents."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Expander>

                <!-- Section 4 : Comportement -->
                <Expander Header="Comportement" IsExpanded="True" Margin="0,0,0,16" Style="{StaticResource ModernExpander}">
                    <StackPanel Margin="0,16,0,0">
                        <CheckBox Content="Démarrer avec Windows"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding StartWithWindows, Mode=TwoWay}"
                                  Margin="0,0,0,16"/>

                        <CheckBox Content="Démarrer minimisé dans le system tray"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding StartMinimized, Mode=TwoWay}"
                                  Margin="0,0,0,16"
                                  IsEnabled="{Binding StartWithWindows}"/>

                        <CheckBox Content="Minimiser vers le tray à la fermeture"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="{Binding MinimizeToTrayOnClose, Mode=TwoWay}"/>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>

        <!-- Message de statut -->
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   FontStyle="Italic"
                   FontSize="12"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,16,0,16"
                   TextWrapping="Wrap"
                   MinHeight="20"/>

        <!-- Boutons Enregistrer / Annuler -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource ModernButtonSecondary}"
                    Padding="24,10"
                    Margin="0,0,12,0"/>

            <Button Content="Enregistrer"
                    Command="{Binding SaveSettingsCommand}"
                    Style="{StaticResource ModernButton}"
                    Padding="24,10"/>
        </StackPanel>
    </Grid>
</Window>
