<Window x:Class="HearSense.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:HearSense.Controls"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Appli Audition - Niveau sonore"
        Icon="/Resources/icon.ico"
        Height="650"
        Width="700"
        MinHeight="500"
        MinWidth="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête simplifié -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Niveau sonore"
                       FontSize="28"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Panneau d'avertissement pour les enceintes (visible uniquement si détecté) -->
        <Border Grid.Row="1"
                BorderBrush="Orange"
                BorderThickness="2"
                CornerRadius="12"
                Padding="30"
                Margin="0,0,0,20"
                Background="#FFF3E0"
                Visibility="{Binding IsSpeakerDetected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⚠️"
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <TextBlock Text="Application non compatible"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="OrangeRed"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                <TextBlock Text="{Binding SpeakerWarningMessage}"
                           FontSize="14"
                           Foreground="#E65100"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="400"/>
            </StackPanel>
        </Border>

        <!-- Jauge dB(A) avec code couleur (masquée si enceinte détectée) -->
        <Border Grid.Row="1"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="12"
                Padding="25"
                Margin="0,0,0,20"
                Background="White"
                Visibility="{Binding IsSpeakerDetected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
            <StackPanel>
                <!-- UserControl DbGauge -->
                <controls:DbGauge Value="{Binding CurrentDbA}"
                                  Category="{Binding ExposureCategory}"
                                  ModeLabel="dB(A)"
                                  MaxHeight="150"/>

                <!-- Avertissement discret -->
                <TextBlock Text="Estimation du niveau sonore - Valeur indicative"
                           FontSize="11"
                           FontStyle="Italic"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Graphe historique LiveCharts2 (masqué si enceinte détectée) -->
        <Border Grid.Row="2"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="12"
                Padding="15"
                Background="White"
                Visibility="{Binding IsSpeakerDetected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Titre du graphe -->
                <TextBlock Grid.Row="0"
                           Text="Historique (3 minutes)"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <!-- Graphe LiveCharts2 -->
                <lvc:CartesianChart x:Name="ChartControl"
                                    Grid.Row="1"
                                    Series="{Binding Series}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    LegendPosition="Hidden"
                                    TooltipPosition="Top"/>
            </Grid>
        </Border>

        <!-- Contrôles (Export CSV discret et Paramètres) -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Message de statut à gauche -->
            <TextBlock Grid.Column="0"
                       Text="{Binding StatusMessage}"
                       VerticalAlignment="Center"
                       FontStyle="Italic"
                       FontSize="11"
                       Foreground="Gray"/>

            <!-- Boutons à droite -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="⚙️ Paramètres"
                        Command="{Binding OpenSettingsCommand}"
                        Padding="12,6"
                        Margin="0,0,10,0"
                        FontSize="12"
                        Background="Transparent"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Cursor="Hand"
                        ToolTip="Ouvrir les paramètres de l'application"/>

                <Button Content="📊 Exporter CSV"
                        Command="{Binding ExportCsvCommand}"
                        Padding="12,6"
                        FontSize="12"
                        Background="Transparent"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Cursor="Hand"
                        ToolTip="Exporter l'historique vers un fichier CSV"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
