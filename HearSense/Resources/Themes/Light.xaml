<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Thème Light (Phase 7 - Tâche 18) -->

    <!-- Couleurs de fond -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BorderBrush" Color="LightGray"/>

    <!-- Couleurs de texte -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="Black"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="Gray"/>

    <!-- Couleurs des panneaux -->
    <SolidColorBrush x:Key="ModePanelBackgroundBrush" Color="AliceBlue"/>
    <SolidColorBrush x:Key="ModePanelBorderBrush" Color="LightBlue"/>

    <SolidColorBrush x:Key="ProfilePanelBackgroundBrush" Color="Honeydew"/>
    <SolidColorBrush x:Key="ProfilePanelBorderBrush" Color="LightGreen"/>

    <!-- Couleurs des boutons -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#C0C0C0"/>

</ResourceDictionary>
