<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Thème Light Moderne -->

    <!-- ==================== COULEURS DE BASE ==================== -->

    <!-- Couleurs de fond -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>

    <!-- Couleurs primaires (Bleu) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#64B5F6"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1976D2"/>

    <!-- Couleurs d'accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#03A9F4"/>

    <!-- ==================== COULEURS DE TEXTE ==================== -->

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="HintTextBrush" Color="#9E9E9E"/>

    <!-- ==================== COULEURS DE BORDURE ==================== -->

    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#2196F3"/>

    <!-- ==================== COULEURS SÉMANTIQUES ==================== -->

    <!-- Success (Vert) -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#81C784"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#E8F5E9"/>

    <!-- Warning (Orange) -->
    <SolidColorBrush x:Key="WarningLightBrush" Color="#FFB74D"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#FFF3E0"/>

    <!-- Error (Rouge) -->
    <SolidColorBrush x:Key="ErrorLightBrush" Color="#E57373"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#FFEBEE"/>

    <!-- Info (Bleu clair) -->
    <SolidColorBrush x:Key="InfoLightBrush" Color="#4FC3F7"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#E1F5FE"/>

    <!-- ==================== EFFETS D'OMBRE (ELEVATION) ==================== -->

    <DropShadowEffect x:Key="Elevation0"
                      BlurRadius="0"
                      ShadowDepth="0"
                      Opacity="0"
                      Color="Black"/>

    <DropShadowEffect x:Key="Elevation1"
                      BlurRadius="4"
                      ShadowDepth="1"
                      Opacity="0.12"
                      Color="Black"/>

    <DropShadowEffect x:Key="Elevation2"
                      BlurRadius="8"
                      ShadowDepth="2"
                      Opacity="0.16"
                      Color="Black"/>

    <DropShadowEffect x:Key="Elevation3"
                      BlurRadius="16"
                      ShadowDepth="4"
                      Opacity="0.20"
                      Color="Black"/>

    <DropShadowEffect x:Key="Elevation4"
                      BlurRadius="24"
                      ShadowDepth="6"
                      Opacity="0.24"
                      Color="Black"/>

    <!-- ==================== COULEURS HÉRITÉES (compatibilité) ==================== -->

    <!-- Panneaux (deprecated mais conservés pour compatibilité) -->
    <SolidColorBrush x:Key="ModePanelBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="ModePanelBorderBrush" Color="#90CAF9"/>

    <SolidColorBrush x:Key="ProfilePanelBackgroundBrush" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="ProfilePanelBorderBrush" Color="#81C784"/>

    <!-- Boutons (deprecated mais conservés pour compatibilité) -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#BDBDBD"/>

</ResourceDictionary>
