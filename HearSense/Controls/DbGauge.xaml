<UserControl x:Class="HearSense.Controls.DbGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label supérieur -->
        <TextBlock Grid.Row="0"
                   Text="{Binding ModeLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="13"
                   FontWeight="Medium"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>

        <!-- Jauge principale -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Barre de progression stylisée -->
            <Border x:Name="GaugeBarContainer"
                    Grid.Column="0"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="12"
                    MinHeight="56"
                    MaxHeight="72"
                    Margin="0,0,20,0"
                    ClipToBounds="True">
                <Grid>
                    <!-- Barre colorée animée avec effet glow -->
                    <Border x:Name="GaugeBar"
                            Background="{Binding CategoryBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CornerRadius="12"
                            HorizontalAlignment="Left"
                            Width="{Binding GaugeWidth, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12"
                                            ShadowDepth="0"
                                            Opacity="0.4"
                                            Color="{Binding CategoryBrush.Color, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </Border.Effect>
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="GaugeTransform"/>
                        </Border.RenderTransform>
                    </Border>

                    <!-- Marqueurs de seuils (positions dynamiques calculées) -->
                    <Canvas x:Name="MarkersCanvas" ClipToBounds="True">
                        <!-- Marqueur 1 : 70 dB(A) - transition Vert → Orange -->
                        <Line X1="{Binding Marker1Position, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Y1="0"
                              X2="{Binding Marker1Position, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Y2="{Binding MarkerHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Stroke="Gray"
                              StrokeThickness="1"
                              StrokeDashArray="2,2"
                              Opacity="0.5"/>
                        <!-- Marqueur 2 : 85 dB(A) - transition Orange → Rouge -->
                        <Line X1="{Binding Marker2Position, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Y1="0"
                              X2="{Binding Marker2Position, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Y2="{Binding MarkerHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Stroke="Gray"
                              StrokeThickness="1"
                              StrokeDashArray="2,2"
                              Opacity="0.5"/>
                        <!-- Marqueur 3 : 100 dB(A) - transition Rouge → Rouge très foncé -->
                        <Line X1="{Binding Marker3Position, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Y1="0"
                              X2="{Binding Marker3Position, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Y2="{Binding MarkerHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Stroke="Gray"
                              StrokeThickness="1"
                              StrokeDashArray="2,2"
                              Opacity="0.5"/>
                    </Canvas>
                </Grid>
            </Border>

            <!-- Valeur numérique -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding ValueText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="42"
                           FontWeight="Bold"
                           Foreground="{Binding CategoryBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <TextBlock Text="dB(A)"
                           FontSize="13"
                           FontWeight="Medium"
                           Foreground="{StaticResource SecondaryTextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Catégorie d'exposition -->
        <Border Grid.Row="2"
                Margin="0,12,0,0"
                Padding="14,8"
                Background="{Binding CategoryBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8"
                                ShadowDepth="2"
                                Opacity="0.16"
                                Color="Black"/>
            </Border.Effect>
            <TextBlock Text="{Binding CategoryText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
